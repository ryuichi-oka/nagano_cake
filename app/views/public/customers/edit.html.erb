<div class="container">
  <h2 class="px-3 text-left mt-3">会員情報編集</h2>
  <div class="row mt-5">
    <div class="col-lg-10 mr-auto">
      <%= form_with model: @customer, url: customers_path, method: :patch, local: true do |f| %>
      <div class="row mb-2">
        <label class="col-lg-2 col-form-label" style="font-weight: bold;">氏名</label>
        <label class="col-lg-1 col-form-label text-right pr-0" style="font-size: 12px; font-weight: bold;">（姓）</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name, class: "form-control last_name", placeholder: "姓" %>
        </div>
        <label class="col-lg-1 col-form-label text-right pr-0" style="font-size: 12px; font-weight: bold;">（名）</label>
        <div class="col-lg-3">
          <%= f.text_field :first_name, class: "form-control first_name", placeholder: "名" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-2 col-form-label" style="font-weight: bold;">フリガナ</label>
        <label class="col-lg-1 col-form-label text-right pr-0" style="font-size: 12px; font-weight: bold;">（セイ）</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name_kana, class: "form-control last_name_kana", placeholder: "セイ" %>
        </div>
        <label class="col-lg-1 col-form-label text-right pr-0" style="font-size: 12px; font-weight: bold;">（メイ）</label>
        <div class="col-lg-3">
          <%= f.text_field :first_name_kana, class: "form-control first_name_kana", placeholder: "メイ" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">郵便番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, class: "form-control postal_code", placeholder: "0000000" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">住所</label>
        <div class="col-lg-7">
          <%= f.text_field :address, class: "form-control address" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">電話番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, class: "form-control telephone_number", placeholder: "00000000000" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, class: "form-control email", placeholder: "sample@example.com" %>
        </div>
      </div>
      <div class="row mb-3">
        <span class="col-lg-3"></span>
        <div class="col-lg-4">
          <%= f.submit "　　編集内容を保存　　", class: "btn btn-success" %>
        </div>
        <div class="col-lg-2">
          <%= link_to "　退会する　", unsubscribe_path, class: "btn btn-danger" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
