<div class="container">
  <h2 class="px-3 mt-3 text-left">配送先編集</h2>
  <%= form_with model: @address, url: address_path(@address.id), method: :patch, local: true do |f| %>
  <div class="row mt-5">
    <div class="col-lg-3">
      <label class="col-form-label" style="font-weight: bold;">郵便番号(ハイフンなし)</label>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :postal_code, class: "form-control postal_code" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-3">
      <label class="col-form-label" style="font-weight: bold;">住所</label>
    </div>
    <div class="col-lg-6">
      <%= f.text_field :address, class: "form-control address" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-3">
      <label class="col-form-label" style="font-weight: bold;">宛名</label>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :name, class: "form-control name" %>
    </div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
      <%= f.submit " 変更内容を保存 ", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>