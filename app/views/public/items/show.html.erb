<div class="container">
  <div class="row">
    <!--ジャンル検索-->
    <div class="col-lg-2">

    </div>
    <div class="col-lg-5">
      <%= image_tag @item.get_image(450, 300) %>
    </div>
    <div class="col-lg-5">
      <h4 class="item-name"><%= @item.name %></h4>
      <p class="item-introduction"><%= @item.introduction %></p>
      <p class="item-price mt-5">￥<%= number_to_currency(@item.with_tax_price) %></p><span>(税込)</span>
      <%= form_with model: @item, url: cart_items_path, method: :post, local: true do |f| %>
      <div class="row mt-3">
        <%= f.hidden_field :item_id, :value => @item.id %>
        <div class="col-lg-3 mx-auto">
          <%= f.select :amount, *[1..10], include_blank: '数量', class: "custom_select cart_item_amount" %>
        </div>
        <div class="col-lg-6 mx-auto">
          <%= f.submit " カートに入れる ", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

