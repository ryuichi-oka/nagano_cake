<div class="container">
  <h4 class="px-3 text-left mt-3 mb-5">注文履歴詳細</h4>
  <div class="row mb-3">
    <label class="col-lg-3 col-form-label">購入者</label>
    <div class="col-lg-6 d-flex align-items-center">
      <%= link_to admin_customer_path(@customer.id) do %>
      <%= @order.name %>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-lg-3 col-form-label">注文日</label>
    <div class="col-lg-6 d-flex align-items-center">
      <%= @order.created_at %>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-lg-3 col-form-label">配送先</label>
    <div class="col-lg-6 d-flex align-items-center">
      〒<%= @order.postal_code %>
      <%= @order.address %>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-lg-3 col-form-label">支払方法</label>
    <div class="col-lg-6 d-flex align-items-center">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-lg-3 col-form-label">注文ステータス</label>
    <div class="col-lg-6 d-flex align-items-center">
      <%= form_with model: @order, url: admin_order_path(@order.id), local: true do |f|  %>
        <%= f.select :status, Order.status_i18n.keys.to_a %>
        <%= f.submit "更新", class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item_id.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detailamount %></td>
            <td>
              <%= form_with model: @order_detail, url: admin_order_detail_path(@order.id), local: true do |f|  %>
                <%= f.select :maiking_status, OrderDetail.maiking_status_i18n.keys.to_a %>
                <%= f.submit "更新", class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
