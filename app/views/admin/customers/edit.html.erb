<div class="container">
  <h4 class="px-3 text-left mt-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  <div class="row mt-5">
    <div class="col-lg-6 mx-auto">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">会員ID</label>
        <div class="col-lg-8">
          <%= @customer.id %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">氏名</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name, class: "form-control customer_last_name" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name, class: "form-control customer_first_name" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">フリガナ</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name_kana, class: "form-control customer_last_name_kana" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name_kana, class: "form-control customer_first_name_kana" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">郵便番号</label>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, class: "form-control customer_postal_code" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">住所</label>
        <div class="col-lg-8">
          <%= f.text_field :address, class: "form-control customer_address" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">電話番号</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, class: "form-control customer_telephone_number" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">メールアドレス</label>
        <div class="col-lg-8">
          <%= f.text_field :email, class: "form-control customer_email" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">会員ステータス</label>
        <div class="col-lg-8">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3 mx-auto">
          <%= f.submit "　変更を保存　", class: "btn btn-lg btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>