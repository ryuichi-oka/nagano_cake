<div class="container">
  <div class="row">
    <div class="col-lg-4 mt-5 mx-auto">
      <h4 class="px-3 text-left">注文履歴一覧</h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-10 mx-auto">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at, admin_order_path(order.id), class: "text-dark" %></td>
            <td><%= order.last_name %><%= order.first_name %></td>
            <td><%= order.order_total %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @orders%>
</div>


