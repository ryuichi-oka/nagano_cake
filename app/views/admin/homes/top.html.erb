<div class="container">
  <h4 class="px-3 mt-5 text-left">注文履歴一覧</h4>
  <div class="row mt-5">
    <div class="col-lg-12">
      <table class="table">
        <thead class="table-active text-left">
          <tr>
            <th scope="col" style="width: 25%">購入日時</th>
            <th scope="col" style="width: 25%">購入者</th>
            <th scope="col" style="width: 25%">注文個数</th>
            <th scope="col" style="width: 25%">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id), class: "text-dark" %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @orders%>
</div>


