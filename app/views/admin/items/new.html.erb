<div class="container">
  <h4 class="px-3 text-left mt-3">商品新規登録</h4>
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <div class="row mb-3">
        <label class="col-lg-2 col-form-label">商品画像</label>
        <div class="col-lg-9">
          <%= f.file_field :image, class: "form-control-file item_image" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-2 col-form-label">商品名</label>
        <div class="col-lg-9">
          <%= f.text_field :name, class: "form-control item_name" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-2 col-form-label">商品説明</label>
        <div class="col-lg-9">
          <%= f.text_area :introduction, class: "form-control item_introduction", rows: "10" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-2 col-form-label">ジャンル</label>
        <div class="col-lg-9">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", class: "form-select item_genre_id" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-2 col-form-label">税抜価格</label>
        <div class="col-lg-9">
          <%= f.text_field :price, class: "form-control item_price" %>
        </div>
        <span class="col-lg-1 text-left">円</span>
      </div>
      <div class="row mb-3">
        <label class="col-lg-2 col-form-label">販売ステータス</label>
        <div class="col-lg-10">
          <%= f.text_field :name, class: "form-control item_name" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>