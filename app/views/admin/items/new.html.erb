
<div class="container">
  <h4 class="px-3 text-left mt-3">商品新規登録</h4>
  <div class="row mt-5">
    <div class="col-lg-6 mx-auto">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">商品画像</label>
        <div class="col-lg-8">
          <%= f.file_field :image, class: "form-control-file item_image" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">商品名</label>
        <div class="col-lg-8">
          <%= f.text_field :name, class: "form-control item_name" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">商品説明</label>
        <div class="col-lg-8">
          <%= f.text_area :introduction, class: "form-control item_introduction", rows: "10" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">ジャンル</label>
        <div class="col-lg-8">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", class: "form-select item_genre_id" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">税抜価格</label>
        <div class="col-lg-8">
          <%= f.text_field :price, class: "form-control item_price" %>
        </div>
        <span class="col-lg-1 px-0 text-left">円</span>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">販売ステータス</label>
        <div class="col-lg-8">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3 mx-auto">
          <%= f.submit "　新規登録　", class: "btn btn-lg btn-success text-center" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>