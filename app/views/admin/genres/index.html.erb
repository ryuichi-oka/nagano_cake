<div class="container">
  <h4 class="px-3 text-left mt-3">ジャンル一覧・追加</h4>
  <div class="row">
    <div class="col-lg-7 mt-5">
      <%= form_with model: @genre_new, url: admin_genres_path, local: true do |f| %>
      <div class="row">
        <p class="col-lg-2 mx-auto">ジャンル名</p>
        <div class="col-lg-5">
          <%= f.text_field :name, class: "form-control name", placeholder: "ジャンル名" %>
        </div>
        <div class="col-lg-5 mx-auto">
          <%= f.submit "    新規登録    ", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5 mt-5">
      <table class="table">
        <thead class="thead-light py-2">
          <tr>
            <th>ジャンル</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody class="py-2">
          <% @genres.each do |genre| %>
          <tr>
            <td class="text-left"><%= genre.name %></td>
            <td class="text-right"><%= link_to "　編集する　", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>